<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.kelin.translucentbart">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.kelin.translucentbart.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.TranslucentStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.kelin.translucentbart.CommonBarActivity"
            android:label="Common Status Bar"
            android:theme="@style/AppTheme.TranslucentStatusBar">
        </activity>


        <activity
            android:name="com.kelin.translucentbart.FragmentActivity"
            android:label="Fragment Common Status Bar"
            android:theme="@style/AppTheme.TranslucentStatusBar">
        </activity>

        <activity
            android:name="com.kelin.translucentbart.ImageOverBarActivity"
            android:label="Image Over Status Bar"
            android:theme="@style/AppTheme.TranslucentStatusBar">

        </activity>
    </application>

</manifest>